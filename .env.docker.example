# ===========================================
# CONFIGURAÇÃO DOCKER COMPOSE
# ===========================================
# Este arquivo mostra as variáveis usadas no docker-compose.yml
# Você NÃO precisa criar este arquivo - as variáveis já estão
# configuradas diretamente no docker-compose.yml
#
# Use este arquivo como referência caso queira customizar

# ===========================================
# BACKEND (pass_backend)
# ===========================================
DATABASE_URL=postgresql://pass_user:pass_password@postgres:5432/pass_db?schema=public
PORT=3333
NODE_ENV=development

# MinIO Configuration
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=pass-vehicles
MINIO_USE_SSL=false

# ===========================================
# FRONTEND (pass_frontend)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3333
NODE_ENV=development

# ===========================================
# POSTGRES
# ===========================================
POSTGRES_USER=pass_user
POSTGRES_PASSWORD=pass_password
POSTGRES_DB=pass_db

# ===========================================
# MINIO
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
