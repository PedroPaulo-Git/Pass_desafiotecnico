{
  "info": {
    "name": "Fleet Manager Backend",
    "_postman_id": "b7c2c0f3-7f6a-4f26-b7d8-collection",
    "description": "Collection to test Vehicle, Fueling, Incident, VehicleDocument, VehicleImage, Helpdesk and User routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3333" },
    { "key": "vehicleId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "fuelingId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "incidentId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "documentId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "imageId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "helpdeskId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "userId", "value": "00000000-0000-0000-0000-000000000000" }
  ],
  "item": [
    { "name": "Health", "request": { "method": "GET", "url": "{{baseUrl}}/health" } },
    {
      "name": "Users",
      "item": [
        { "name": "List Users", "request": { "method": "GET", "url": "{{baseUrl}}/users" } },
        { "name": "Get User By ID", "request": { "method": "GET", "url": "{{baseUrl}}/users/{{userId}}" } },
        { "name": "Create User", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao.silva@example.com\",\n  \"role\": \"CLIENT\"\n}" }, "url": "{{baseUrl}}/users" } },
        { "name": "Update User", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"name\": \"João Silva Atualizado\",\n  \"role\": \"ADMIN\"\n}" }, "url": "{{baseUrl}}/users/{{userId}}" } },
        { "name": "Delete User", "request": { "method": "DELETE", "url": "{{baseUrl}}/users/{{userId}}" } }
      ]
    },
    {
      "name": "Vehicles",
      "item": [
        { "name": "List Vehicles", "request": { "method": "GET", "url": "{{baseUrl}}/vehicles" } },
        { "name": "Get Vehicle By ID", "request": { "method": "GET", "url": "{{baseUrl}}/vehicles/{{vehicleId}}" } },
        { "name": "Create Vehicle", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"plate\": \"ABC1C23\",\n  \"brand\": \"Scania\",\n  \"model\": \"Busscar 340\",\n  \"year\": 2020,\n  \"doors\": 2,\n  \"capacity\": 40,\n  \"fuelType\": \"DIESEL\",\n  \"category\": \"ONIBUS\",\n  \"classification\": \"EXECUTIVO\"\n}" }, "url": "{{baseUrl}}/vehicles" } },
        { "name": "Update Vehicle", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"brand\": \"Volvo\"\n}" }, "url": "{{baseUrl}}/vehicles/{{vehicleId}}" } },
        { "name": "Delete Vehicle", "request": { "method": "DELETE", "url": "{{baseUrl}}/vehicles/{{vehicleId}}" } },
        { "name": "List Fuelings by Vehicle", "request": { "method": "GET", "url": "{{baseUrl}}/vehicles/{{vehicleId}}/fuelings" } },
        { "name": "Create Fueling", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"provider\": \"Posto X\",\n  \"date\": \"2025-11-29T12:00:00.000Z\",\n  \"odometer\": 50000,\n  \"fuelType\": \"DIESEL\",\n  \"liters\": 100,\n  \"unitPrice\": 5.5\n}" }, "url": "{{baseUrl}}/vehicles/{{vehicleId}}/fuelings" } },
        { "name": "List Incidents by Vehicle", "request": { "method": "GET", "url": "{{baseUrl}}/vehicles/{{vehicleId}}/incidents" } },
        { "name": "Create Incident", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"classification\": \"MULTA\",\n  \"severity\": \"MEDIA\",\n  \"date\": \"2025-11-29T12:00:00.000Z\"\n}" }, "url": "{{baseUrl}}/vehicles/{{vehicleId}}/incidents" } },
        { "name": "List Documents by Vehicle", "request": { "method": "GET", "url": "{{baseUrl}}/vehicles/{{vehicleId}}/documents" } },
        { "name": "Create Vehicle Document", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"name\": \"Licenciamento\",\n  \"expiryDate\": \"2026-01-15T00:00:00.000Z\",\n  \"alertDays\": 15,\n  \"activeAlert\": true\n}" }, "url": "{{baseUrl}}/vehicles/{{vehicleId}}/documents" } },
        { "name": "List Images by Vehicle", "request": { "method": "GET", "url": "{{baseUrl}}/vehicles/{{vehicleId}}/images" } },
        { "name": "Create Vehicle Image", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"url\": \"https://example.com/image.jpg\"\n}" }, "url": "{{baseUrl}}/vehicles/{{vehicleId}}/images" } }
      ]
    },
    {
      "name": "Helpdesk",
      "item": [
        { "name": "List Helpdesk Tickets", "request": { "method": "GET", "url": "{{baseUrl}}/helpdesk" } },
        { "name": "Get Helpdesk Ticket By ID", "request": { "method": "GET", "url": "{{baseUrl}}/helpdesk/{{helpdeskId}}" } },
        { "name": "Create Helpdesk Ticket", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"clientId\": \"{{userId}}\",\n  \"title\": \"Problema com veículo\",\n  \"description\": \"O veículo não está funcionando corretamente\",\n  \"category\": \"BUG\",\n  \"priority\": \"MEDIA\",\n  \"module\": \"AGENDAMENTO\",\n  \"environment\": \"WEB\"\n}" }, "url": "{{baseUrl}}/helpdesk" } },
        { "name": "Update Helpdesk Ticket", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"status\": \"EM_ANALISE\",\n  \"assignedUserId\": \"{{userId}}\"\n}" }, "url": "{{baseUrl}}/helpdesk/{{helpdeskId}}" } },
        { "name": "Delete Helpdesk Ticket", "request": { "method": "DELETE", "url": "{{baseUrl}}/helpdesk/{{helpdeskId}}" } },
        { "name": "List Messages by Ticket", "request": { "method": "GET", "url": "{{baseUrl}}/helpdesk/{{helpdeskId}}/messages" } },
        { "name": "Create Message", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"authorType\": \"user\",\n  \"authorId\": \"{{userId}}\",\n  \"message\": \"Mensagem de teste\",\n  \"attachments\": []\n}" }, "url": "{{baseUrl}}/helpdesk/{{helpdeskId}}/messages" } }
      ]
    },
    { "name": "Fuelings", "item": [
      { "name": "List Fuelings", "request": { "method": "GET", "url": "{{baseUrl}}/fuelings" } },
      { "name": "Get Fueling By ID", "request": { "method": "GET", "url": "{{baseUrl}}/fuelings/{{fuelingId}}" } },
      { "name": "Update Fueling", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"provider\": \"Posto Y\"\n}" }, "url": "{{baseUrl}}/fuelings/{{fuelingId}}" } },
      { "name": "Delete Fueling", "request": { "method": "DELETE", "url": "{{baseUrl}}/fuelings/{{fuelingId}}" } }
    ] },
    { "name": "Incidents", "item": [
      { "name": "List Incidents", "request": { "method": "GET", "url": "{{baseUrl}}/incidents" } },
      { "name": "Get Incident By ID", "request": { "method": "GET", "url": "{{baseUrl}}/incidents/{{incidentId}}" } },
      { "name": "Update Incident", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"severity\": \"ALTA\"\n}" }, "url": "{{baseUrl}}/incidents/{{incidentId}}" } },
      { "name": "Delete Incident", "request": { "method": "DELETE", "url": "{{baseUrl}}/incidents/{{incidentId}}" } }
    ] },
    { "name": "Vehicle Documents", "item": [
      { "name": "List Documents", "request": { "method": "GET", "url": "{{baseUrl}}/documents" } },
      { "name": "Get Document By ID", "request": { "method": "GET", "url": "{{baseUrl}}/documents/{{documentId}}" } },
      { "name": "Update Document", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"activeAlert\": false\n}" }, "url": "{{baseUrl}}/documents/{{documentId}}" } },
      { "name": "Delete Document", "request": { "method": "DELETE", "url": "{{baseUrl}}/documents/{{documentId}}" } }
    ] },
    { "name": "Vehicle Images", "item": [
      { "name": "List Images", "request": { "method": "GET", "url": "{{baseUrl}}/images" } },
      { "name": "Get Image By ID", "request": { "method": "GET", "url": "{{baseUrl}}/images/{{imageId}}" } },
      { "name": "Update Image", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": { "mode": "raw", "raw": "{\n  \"url\": \"https://example.com/new-image.jpg\"\n}" }, "url": "{{baseUrl}}/images/{{imageId}}" } },
      { "name": "Delete Image", "request": { "method": "DELETE", "url": "{{baseUrl}}/images/{{imageId}}" } }
    ] }
  ]
}
