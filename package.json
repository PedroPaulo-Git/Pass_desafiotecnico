{
  "name": "pass-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "pass_frontend",
    "pass_schemas"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=pass_frontend",
    "build": "npm run build --workspace=pass_schemas && npm run build --workspace=pass_frontend",
    "build:schemas": "npm run build --workspace=pass_schemas",
    "build:frontend": "npm run build --workspace=pass_frontend",
    "start": "npm run start --workspace=pass_frontend"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
